<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.literacyapp</groupId>
    <artifactId>literacyapp-model</artifactId>
    <version>1.0.21-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>literacyapp-model</name>
  
    <properties>
        <java.version>1.8</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    
    <prerequisites>
        <maven>3.2.2</maven>
    </prerequisites>
    
    <issueManagement>
        <system>Trello</system>
        <url>https://trello.com/b/les4HgKG/team-development</url>
    </issueManagement>
    <ciManagement>
        <system>Travis CI</system>
        <url>https://travis-ci.org/literacyapp-org/literacyapp-model</url>
    </ciManagement>
    <scm>
        <connection>scm:git:git@github.com:literacyapp-org/literacyapp-model.git</connection>
        <developerConnection>scm:git:git@github.com:literacyapp-org/literacyapp-model.git</developerConnection>
        <url>https://github.com/literacyapp-org/literacyapp-model</url>
        <tag>HEAD</tag>
    </scm>
    
    <distributionManagement>
        <repository>
            <id>archiva.internal</id>
            <name>Internal Release Repository</name>
            <url>http://archiva.educativo.eu:8081/repository/internal/</url>
        </repository>
    </distributionManagement>
    <repositories>
        <repository>
            <id>archiva.internal</id>
            <url>http://archiva.educativo.eu:8081/repository/internal/</url>
        </repository>
    </repositories>
    
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.4.2</version>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.maven.scm</groupId>
                        <artifactId>maven-scm-provider-gitexe</artifactId>
                        <version>1.8.1</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>
    
    <dependencies>
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>2.2.4</version>
        </dependency>
        <dependency>
            <groupId>org.greenrobot</groupId>
            <artifactId>greendao</artifactId>
            <version>3.0.1</version>
        </dependency>
    </dependencies>
</project>
